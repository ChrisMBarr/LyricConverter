{
  "name": "lyric-converter",
  "version": "3.3.9",
  "homepage": "https://lyricconverter.net",
  "author": {
    "name": "Chris Barr",
    "url": "http://chrisbarr.me"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ChrisMBarr/LyricConverter"
  },
  "bugs": {
    "url": "https://github.com/ChrisMBarr/LyricConverter/issues"
  },
  "scripts": {
    "ng": "npm run genversion && ng",
    "start": "npm run genversion && ng serve",
    "build": "npm run genversion && ng build",
    "genversion": "npx genversion src/app/version.ts --es6 --semi",
    "watch": "npm run genversion && ng build --watch --configuration development",
    "test": "npm run genversion && ng test",
    "test-browsers-all": "npm run genversion && ng test --browsers=Edge,Firefox,Chrome",
    "test-browser-firefox": "npm run genversion && ng test --browsers=Firefox",
    "test-browser-edge": "npm run genversion && ng test --browsers=Edge",
    "test-coverage": "npm run genversion && ng test --code-coverage --no-watch",
    "test-coverage-headless": "npm run genversion && ng test --code-coverage --no-watch --browsers=ChromeHeadless",
    "lint": "ng lint --fix",
    "update": "npm run update-angular && npx npm-check-updates -u",
    "update-angular": "ng update @angular/cli @angular/core @angular-eslint/schematics --allow-dirty",
    "serve:ssr:LyricConverter": "node dist/LyricConverter/server/server.mjs"
  },
  "dependencies": {
    "@angular/animations": "^20.3.3",
    "@angular/common": "^20.3.3",
    "@angular/compiler": "^20.3.3",
    "@angular/core": "^20.3.3",
    "@angular/platform-browser": "^20.3.3",
    "@angular/platform-browser-dynamic": "^20.3.3",
    "@angular/platform-server": "^20.3.3",
    "@angular/router": "^20.3.3",
    "@angular/ssr": "20.3.4",
    "buffer": "^6.0.3",
    "chordsheetjs": "^12.3.1",
    "express": "^5.1.0",
    "file-saver": "^2.0.5",
    "js-base64": "^3.7.8",
    "jszip": "^3.10.1",
    "openlyrics-parser": "^1.1.8",
    "propresenter-parser": "^1.0.5",
    "rxjs": "^7.8.2",
    "songpro": "^0.1.2",
    "songshowplus-parser": "^2.0.5",
    "timers-browserify": "^2.0.12",
    "tslib": "^2.8.1",
    "zone.js": "^0.15.1"
  },
  "devDependencies": {
    "@angular-devkit/architect": "0.2003.4",
    "@angular-devkit/core": "^20.3.4",
    "@angular-eslint/builder": "~20.3.0",
    "@angular-eslint/eslint-plugin": "~20.3.0",
    "@angular-eslint/eslint-plugin-template": "^20.3.0",
    "@angular-eslint/schematics": "~20.3.0",
    "@angular-eslint/template-parser": "~20.3.0",
    "@angular/build": "^20.3.4",
    "@angular/cli": "20.3.4",
    "@angular/compiler-cli": "^20.3.3",
    "@chiragrupani/karma-chromium-edge-launcher": "^2.4.1",
    "@types/express": "^5.0.3",
    "@types/file-saver": "~2.0.7",
    "@types/jasmine": "~5.1.9",
    "@types/node": "^24.6.2",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "angular-eslint": "^20.3.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-only-warn": "^1.1.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "genversion": "^3.2.0",
    "jasmine-core": "~5.11.0",
    "karma": "~6.4.4",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.1",
    "karma-firefox-launcher": "~2.1.3",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "tailwindcss": "3.0.24",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.45.0"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "*"
  }
}
