{
  "name": "lyric-converter",
  "version": "3.3.0",
  "homepage": "https://lyricconverter.net",
  "author": {
    "name": "Chris Barr",
    "url": "http://chrisbarr.me"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ChrisMBarr/LyricConverter"
  },
  "bugs": {
    "url": "https://github.com/ChrisMBarr/LyricConverter/issues"
  },
  "scripts": {
    "ng": "npm run genversion && ng",
    "start": "npm run genversion && ng serve",
    "build": "npm run genversion && ng build",
    "build-gh-pages": "npm run genversion && npm run prerender",
    "genversion": "npx genversion src/app/version.ts --es6 --semi",
    "watch": "npm run genversion && ng build --watch --configuration development",
    "test": "npm run genversion && ng test",
    "test-browsers-all": "npm run genversion && ng test --browsers=Edge,Firefox,Chrome",
    "test-browser-firefox": "npm run genversion && ng test --browsers=Firefox",
    "test-browser-edge": "npm run genversion && ng test --browsers=Edge",
    "test-coverage": "npm run genversion && ng test --code-coverage --no-watch",
    "test-coverage-headless": "npm run genversion && ng test --code-coverage --no-watch --browsers=ChromeHeadless",
    "lint": "ng lint --fix",
    "update": "ncu -u",
    "dev:ssr": "ng run LyricConverter:serve-ssr",
    "serve:ssr": "node dist/LyricConverter/server/main.js",
    "build:ssr": "ng build && ng run LyricConverter:server",
    "prerender": "ng run LyricConverter:prerender"
  },
  "private": false,
  "dependencies": {
    "@angular/animations": "^17.3.10",
    "@angular/common": "^17.3.10",
    "@angular/compiler": "^17.3.10",
    "@angular/core": "^17.3.10",
    "@angular/platform-browser": "^17.3.10",
    "@angular/platform-browser-dynamic": "^17.3.10",
    "@angular/platform-server": "^17.3.10",
    "@angular/router": "^17.3.10",
    "@angular/ssr": "^17.3.8",
    "chordsheetjs": "^10.1.0",
    "eslint-plugin-only-warn": "^1.1.0",
    "eslint-plugin-simple-import-sort": "^12.1.0",
    "express": "^4.19.2",
    "file-saver": "^2.0.5",
    "js-base64": "^3.7.7",
    "jszip": "^3.10.1",
    "localstorage-polyfill": "^1.0.1",
    "openlyrics-parser": "^1.1.5",
    "propresenter-parser": "^1.0.2",
    "rxjs": "^7.8.1",
    "songpro": "^0.1.2",
    "songshowplus-parser": "^2.0.4",
    "timers-browserify": "^2.0.12",
    "tslib": "^2.6.2",
    "zone.js": "^0.14.6"
  },
  "devDependencies": {
    "@angular-devkit/architect": "^0.1703.8",
    "@angular-devkit/build-angular": "^17.3.8",
    "@angular-devkit/core": "^17.3.8",
    "@angular-eslint/builder": "~17.5.2",
    "@angular-eslint/eslint-plugin": "~17.5.2",
    "@angular-eslint/eslint-plugin-template": "^17.5.2",
    "@angular-eslint/schematics": "~17.5.2",
    "@angular-eslint/template-parser": "~17.5.2",
    "@angular/cli": "^17.3.8",
    "@angular/compiler-cli": "^17.3.10",
    "@chiragrupani/karma-chromium-edge-launcher": "^2.4.1",
    "@types/express": "^4.17.21",
    "@types/file-saver": "~2.0.7",
    "@types/jasmine": "~5.1.4",
    "@types/node": "^20.13.0",
    "@typescript-eslint/eslint-plugin": "~7.11.0",
    "@typescript-eslint/parser": "~7.11.0",
    "autoprefixer": "^10.4.19",
    "eslint": "~8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-tailwindcss": "^3.17.0",
    "genversion": "^3.2.0",
    "jasmine-core": "~5.1.2",
    "karma": "~6.4.3",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.1",
    "karma-firefox-launcher": "~2.1.3",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "postcss": "^8.4.38",
    "prettier": "^3.3.0",
    "prettier-plugin-tailwindcss": "^0.6.1",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.4.5"
  }
}
