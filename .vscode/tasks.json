  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start",
      "type": "npm",
      "script": "start",
      "isBackground": true,
      "icon": {"color": "terminal.ansiGreen", "id": "play"},
      "problemMatcher": {
        "owner": "typescript",
        "pattern": "$tsc",
        "background": {
          "activeOnStart": true,
          "beginsPattern": {
            "regexp": "(.*?)"
          },
          "endsPattern": {
            "regexp": "bundle generation complete"
          }
        }
      }
    },
    {
      "label": "Unit Tests",
      "type": "npm",
      "script": "test",
      "isBackground": true,
      "icon": { "color": "terminal.ansiCyan", "id": "symbol-unit" },
