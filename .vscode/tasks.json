        "owner": "typescript",
        "pattern": "$tsc",
        "background": {
          "activeOnStart": true,
          "beginsPattern": {
            "regexp": "(.*?)"
          },
          "endsPattern": {
            "regexp": "bundle generation complete"
          }
        }
      }
    },
    {
      "label": "Lint",
      "type": "npm",
      "script": "lint",
      "isBackground": true,
      "icon": { "color": "terminal.ansiYellow", "id": "check-all" },
