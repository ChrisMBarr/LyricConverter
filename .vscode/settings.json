{
  "files.exclude": {
      "**/.gitignore": true,
      "**/.gitkeep": true,
      ".angular": true,
      ".editorconfig": true,
      "coverage": true,
      "design": true,
      "dist": true,
      "node_modules": true,
    },
    "files.associations": {
      "*.sng": "chordpro",
      "*.pro4": "xml",
      "*.pro5": "xml",
      "*.pro6": "xml",
    },
    "explorer.fileNesting.expand": false,
    "explorer.fileNesting.patterns": {
      "*.ts": "${capture}.spec.ts",
      "tsconfig.json": "tsconfig.*.json",
      "package.json": "package-lock.json, yarn.lock, pnpm-lock.yaml, bun.lockb"
    }
}
